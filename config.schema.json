{
    "pluginAlias": "HttpMotionSensorPlatform",
    "pluginType": "platform",
    "singular": false,
    "schema": {
        "type": "object",
        "properties": {
            "name": {
                "title": "Platform Name",
                "type": "string",
                "default": "HTTP Motion Sensor Platform",
                "required": true
            },
            "sensors": {
                "title": "Motion Sensors",
                "type": "array",
                "items": {
                    "type": "object",
                    "properties": {
                        "name": {
                            "title": "Sensor Name",
                            "type": "string",
                            "placeholder": "e.g. Hallway Motion Sensor",
                            "required": true
                        },
                        "port": {
                            "title": "HTTP Port",
                            "type": "integer",
                            "minimum": 1024,
                            "maximum": 65535,
                            "placeholder": "e.g. 18089",
                            "required": true
                        },
                        "model": {
                            "title": "Model",
                            "type": "string",
                            "placeholder": "e.g. ESP8266 Motion Sensor"
                        },
                        "serial": {
                            "title": "Serial Number",
                            "type": "string",
                            "placeholder": "e.g. E642011E3ECB"
                        },
                        "bind_ip": {
                            "title": "Bind IP Address",
                            "type": "string",
                            "placeholder": "0.0.0.0",
                            "format": "ipv4"
                        },
                        "repeater": {
                            "title": "Repeater Endpoints",
                            "type": "array",
                            "items": {
                                "type": "object",
                                "properties": {
                                    "host": {
                                        "title": "Host",
                                        "type": "string",
                                        "placeholder": "192.168.1.100",
                                        "required": true
                                    },
                                    "port": {
                                        "title": "Port",
                                        "type": "integer",
                                        "minimum": 1,
                                        "maximum": 65535,
                                        "placeholder": "80",
                                        "required": true
                                    },
                                    "path": {
                                        "title": "Path",
                                        "type": "string",
                                        "placeholder": "/api/trigger",
                                        "required": true
                                    },
                                    "auth": {
                                        "title": "Authorization Header",
                                        "type": "string",
                                        "placeholder": "Bearer token123"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "form": null,
    "display": null,
    "layout": [
        {
            "type": "flex",
            "flex-flow": "row wrap",
            "items": ["name"]
        },
        {
            "key": "sensors",
            "type": "array",
            "title": "Motion Sensors",
            "description": "Configure one or more HTTP motion sensors",
            "items": [
                {
                    "type": "flex",
                    "flex-flow": "row wrap",
                    "items": [
                        {
                            "key": "sensors[].name",
                            "flex": "1 1 50%"
                        },
                        {
                            "key": "sensors[].port",
                            "flex": "1 1 50%"
                        }
                    ]
                },
                {
                    "type": "flex",
                    "flex-flow": "row wrap",
                    "items": [
                        {
                            "key": "sensors[].model",
                            "flex": "1 1 50%"
                        },
                        {
                            "key": "sensors[].serial",
                            "flex": "1 1 50%"
                        }
                    ]
                },
                {
                    "key": "sensors[].bind_ip"
                },
                {
                    "key": "sensors[].repeater",
                    "type": "array",
                    "title": "Repeater Endpoints",
                    "description": "Optional: Make additional HTTP requests when motion is detected",
                    "items": [
                        {
                            "type": "flex",
                            "flex-flow": "row wrap",
                            "items": [
                                {
                                    "key": "sensors[].repeater[].host",
                                    "flex": "1 1 40%"
                                },
                                {
                                    "key": "sensors[].repeater[].port",
                                    "flex": "1 1 30%"
                                },
                                {
                                    "key": "sensors[].repeater[].path",
                                    "flex": "1 1 30%"
                                }
                            ]
                        },
                        {
                            "key": "sensors[].repeater[].auth"
                        }
                    ]
                }
            ]
        }
    ]
}
