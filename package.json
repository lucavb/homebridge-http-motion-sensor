{
    "name": "homebridge-http-motion-sensor",
    "version": "1.2.2",
    "description": "Homebridge plugin for a remote motion sensor based on http",
    "main": "dist/index.js",
    "scripts": {
        "build": "npx tsc",
        "cbuild": "npm run clean && npm run build",
        "clean": "rm -rf dist",
        "format:check": "npx prettier --check .",
        "format": "npx prettier --write .",
        "lint:fix": "npx eslint --fix src/**/*.ts",
        "lint": "npx eslint src/**/*.ts",
        "prepare": "npm run cbuild",
        "test": "npx jest"
    },
    "files": [
        "dist"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/lucavb/homebridge-http-motion-sensor.git"
    },
    "keywords": [
        "homebridge-plugin",
        "homebridge",
        "homekit",
        "motionsensor",
        "motion"
    ],
    "author": "Luca Becker <luca.becker@sunbury.xyz> (https://sunbury.xyz/)",
    "license": "GPL-3.0",
    "bugs": {
        "url": "https://github.com/lucavb/homebridge-http-motion-sensor/issues"
    },
    "homepage": "https://github.com/lucavb/homebridge-http-motion-sensor#readme",
    "engines": {
        "node": ">=0.12.0",
        "homebridge": ">=0.2.0"
    },
    "dependencies": {
        "homebridge-ts-helper": "^2.0.0-beta.4"
    },
    "devDependencies": {
        "@types/node": "^13.7.1",
        "@typescript-eslint/eslint-plugin": "^2.19.2",
        "@typescript-eslint/parser": "^2.19.2",
        "eslint": "^6.8.0",
        "eslint-config-google": "^0.14.0",
        "hap-nodejs": "^0.7.7",
        "homebridge": "^1.1.1",
        "prettier": "3.5.3",
        "typescript": "^3.9.7"
    }
}
