{
    "name": "homebridge-http-motion-sensor",
    "version": "2.0.0",
    "description": "Homebridge plugin for a remote motion sensor based on http",
    "files": [
        "dist"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/lucavb/homebridge-http-motion-sensor.git"
    },
    "keywords": [
        "homebridge-plugin",
        "homebridge",
        "homekit",
        "motionsensor",
        "motion"
    ],
    "author": {
        "name": "Mark Hendriksen"
    },
    "license": "GPL-3.0",
    "bugs": {
        "url": "https://github.com/lucavb/homebridge-http-motion-sensor/issues"
    },
    "homepage": "https://github.com/lucavb/homebridge-http-motion-sensor#readme",
    "engines": {
        "node": "^18.20.4 || ^20.15.1 || ^22.0.0",
        "homebridge": "^1.6.0 || ^2.0.0-beta.0"
    },
    "dependencies": {},
    "devDependencies": {
        "@jest/globals": "^30.0.0",
        "jest": "29.7.0",
        "ts-jest": "29.3.4",
        "homebridge": "^2.0.0-beta.29",
        "semantic-release": "24.2.5",
        "nodemon": "3.1.10",
        "homebridge-config-ui-x": "^v5.0.0-beta.87",
        "eslint": "^9.28.0",
        "@eslint/js": "^9.28.0",
        "@typescript-eslint/eslint-plugin": "^8.33.1",
        "@typescript-eslint/parser": "^8.33.1",
        "rimraf": "^6.0.1"
    },
    "scripts": {
        "semantic-release": "semantic-release",
        "lint": "eslint --max-warnings=0",
        "lint:fix": "eslint --fix --max-warnings=0 .",
        "watch": "nodemon",
        "build": "rimraf ./dist && tsc && npm link",
        "prepublishOnly": "npm run lint && npm run build",
        "test": "jest"
    },
    "main": "dist/src/index.js",
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "node"
    },
    "nodemonConfig": {
        "watch": [
            "src"
        ],
        "ext": "ts",
        "ignore": [],
        "exec": "npm run build && DEBUG= node ./node_modules/homebridge-config-ui-x/dist/bin/hb-service.js run --stdout -U ./test/hbConfig -D -I | tee -a ./test/hbConfig/homebridge.log",
        "signal": "SIGTERM",
        "env": {
            "NODE_OPTIONS": "--trace-warnings"
        }
    }
}